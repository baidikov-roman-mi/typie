{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true, // perfomance boost
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@styling/*":["./src/styling/*"],
      "@fonts/*":["./src/styling/fonts/static/*"],
      "@icon/*":["./public/icons/*"],
      "@routes/*":["./src/routes/*"],
      "@mainPage/*":["./src/components/main-page/*"],
      "@aboutPage/*":["./src/components/about-page/*"],
      "@testPage/*":["./src/components/test-page/*"],
      "@lessonsPage/*":["./src/components/lessons-page/*"],
      "@leadersPage/*":["./src/components/leaders-page/*"],
      "@settingsPage/*":["./src/components/settings-page/*"],
      "@loginPage/*":["./src/components/login-page/*"],
    },
    
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "types": ["node"],
  "references": [{ "path": "./tsconfig.node.json" }],
}
